<Window x:Class="Zoo_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoo_Manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        >
    <Grid>
        <Label Content="Zoo List" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" />
        <ListBox Name="ZooList" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Width="100" 
            Height="200" 
            Margin="10,41,0,0" SelectionChanged="ZooList_SelectionChanged"
            />
        <Label Content="Animal List" HorizontalAlignment="Left" Margin="127,10,0,0" VerticalAlignment="Top" />
        <ListBox x:Name="AnimalList" HorizontalAlignment="Left" Height="200" Margin="127,41,0,0" VerticalAlignment="Top" Width="100" />
    </Grid>
</Window>
